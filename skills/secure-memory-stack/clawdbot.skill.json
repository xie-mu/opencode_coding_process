  "type": "skill",
  "category": "memory",
  "tags": [
    "memory",
    "security",
    "privacy",
    "baidu-embedding",
    "git-notes",
    "semantic-search",
    "local-storage"
  ],
  "author": "Clawdbot Community",
  "license": "MIT",
  "api": {
    "version": "1.0.0",
    "compatibility": ">=1.0.0"
  },
  "requirements": {
    "clawdbot": ">=1.0.0",
    "python": ">=3.8",
    "git": ">=2.0"
  },
  "files": [
    "SKILL.md",
    "README.md",
    "DOCUMENTATION.md",
    "INSTALLATION.md",
    "QUICK_START.md",
    "MEMORY_SYSTEM_GUIDE.md",
    "memory_system_comprehensive_guide.md",
    "memory_quick_start.md",
    "memory_system_config.json",
    "memory_health_check.sh",
    "memory_maintenance.sh",
    "memory_performance_monitor.sh",
    "model_change_memory_loader.sh",
