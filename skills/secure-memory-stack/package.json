{
  "name": "secure-memory-stack",
  "version": "1.0.0",
  "description": "一个安全的本地化记忆系统，结合百度Embedding语义搜索、Git Notes结构化存储和文件系统，确保数据隐私和安全。",
  "main": "secure-memory",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "status": "bash scripts/status.sh",
    "search": "bash scripts/search.sh",
    "remember": "bash scripts/remember.sh"
  },
  "keywords": [
    "memory",
    "local",
    "privacy",
    "security",
    "embedding",
    "baidu",
    "git-notes"
  ],
  "author": "Clawdbot Team",
  "license": "MIT",
  "dependencies": {
    "memory-baidu-embedding-db": "^1.0.0",
    "git-notes-memory": "^1.0.0"
  },
  "clawdbot": {
    "skill": true,
    "executable": "secure-memory",
    "type": "memory",
    "features": [
      "local-storage",
      "semantic-search",
      "structured-memory",
      "privacy-focused"
    ]
  }
}