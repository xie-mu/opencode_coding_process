{
  "memory_system": {
    "enabled": true,
    "performance_mode": "maximum",
    "components": {
      "baidu_embedding": {
        "enabled": true,
        "api_string_env": "BAIDU_API_STRING",
        "secret_key_env": "BAIDU_SECRET_KEY",
        "cache_enabled": true,
        "vector_dimensions": 384,
        "similarity_threshold": 0.7
      },
      "git_notes": {
        "enabled": true,
        "repo_path": "/root/clawd",
        "branch": "memory-notes",
        "auto_sync": true
      },
      "triple_memory": {
        "short_term_ttl": "1h",
        "long_term_persistence": true,
        "working_context_size": 10
      }
    },
    "bootstrap": {
      "steps": [
        {
          "step": 1,
          "name": "vector_activation",
          "description": "瞬间激活并全功率运行所有向量检索、嵌入模型、语义记忆模块",
          "timeout_ms": 30000
        },
        {
          "step": 2,
          "name": "system_check",
          "description": "立刻完整自检全部记忆系统配置",
          "timeout_ms": 15000
        },
        {
          "step": 3,
          "name": "module_activation",
          "description": "彻底开启并激活所有与记忆相关的技能/工具/模块",
          "timeout_ms": 15000
        }
      ]
    },
    "security": {
      "local_only": true,
      "no_external_upload": true,
      "encryption_at_rest": false,
      "access_logs": true
    },
    "performance": {
      "max_concurrent_searches": 5,
      "cache_size_mb": 512,
      "vector_preloading": true,
      "batch_processing": true
    }
  }
}