{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/.cta.json",
      "!**/.vscode",
      "!**/node_modules",
      "!**/dist",
      "!**/.output",
      "!**/coverage",
      "!**/convex/_generated",
      "!**/test-results",
      "!**/src/routeTree.gen.ts",
      "!**/.tanstack",
      "!**/public",
      "!**/.devenv",
      "!**/.devenv"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  }
}
