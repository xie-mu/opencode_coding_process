# Music Vocal Concert 环境变量配置示例

# 数据库配置
DATABASE_URL=postgresql://music_user:secure_password@localhost:5432/music_vocal_concert
MONGODB_URI=mongodb://localhost:27017/music_vocal_concert

# API配置
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# 爬虫配置
CRAWLER_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30

# 部署配置
ENVIRONMENT=development
DEBUG=True
PORT=8000

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=app.log

# 前端配置
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000/api

# 安全配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 邮件配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 第三方API
DAMAI_API_KEY=your_damai_api_key
MAOYAN_API_KEY=your_maoyan_api_key
SHOWSTART_API_KEY=your_showstart_api_key